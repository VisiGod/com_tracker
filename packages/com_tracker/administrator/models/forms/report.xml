<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="hidden" default="" />

		<field name="fid" type="sql" class="input-xxlarge" default="" label="COM_TRACKER_TORRENT_NAME" description="" query="SELECT fid, name FROM #__tracker_torrents WHERE state = 1" key_field="fid" value_field="name" />

		<field name="reporter" type="user" label="JGLOBAL_USERNAME" description="" />

		<field name="report_type" type="list" default="1" label="COM_TRACKER_REPORTS_REPORT_TYPE" description="">
			<option value="1">COM_TRACKER_REPORTS_REPORT_CAUSE_DUPLICATED</option>
			<option value="2">COM_TRACKER_REPORTS_REPORT_CAUSE_FALSE</option>
			<option value="3">COM_TRACKER_REPORTS_REPORT_CAUSE_BAD</option>
			<option value="4">COM_TRACKER_REPORTS_REPORT_CAUSE_HAS_VIRUS</option>
			<option value="5">COM_TRACKER_REPORTS_REPORT_CAUSE_NUKED</option>
			<option value="6">COM_TRACKER_REPORTS_REPORT_CAUSE_OTHER_REASON</option>
		</field>

		<field name="created_time" type="calendar" label="JGLOBAL_CREATED_DATE" description="" class="inputbox" size="22" format="%Y-%m-%d" filter="user_utc" />

		<field name="ordering" type="Ordering" class="inputbox" label="JFIELD_ORDERING_LABEL" description="JFIELD_ORDERING_DESC" />

		<field name="state" type="hidden" default="1" />

	</fieldset>
</form>
