				<field name="seeders_field" type="list" default="0" label="MOD_XBT_TRACKER_FIELD_SEEDERS_FIELD_LABEL" description="MOD_XBT_TRACKER_FIELD_SEEDERS_FIELD_DESCRIPTION">
